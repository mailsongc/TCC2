<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadDocActivity">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:src="@mipmap/doc_carro"
        android:id="@+id/imgDocFoto"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow   android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnTirarFotoDoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tirar_foto"

                android:layout_column="1"
                android:padding="18dip" android:gravity="center"
                style="@style/RaisedButton"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnEnviarDocFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar Documento"
                android:layout_column="1"

                android:padding="18dip" android:gravity="center"
                style="@style/RaisedButton"/>

        </TableRow>


    </TableLayout>

</LinearLayout>